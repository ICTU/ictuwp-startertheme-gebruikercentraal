{% extends "base.twig" %}

{% block content %}

  <article class="post post--full post--type-{{ post.post_type }}" id="post-{{ post.ID }}">


    <header class="post__header">
      <h1 class="page__title">{{ post.title }}</h1>
    </header>

    <section class="post__content">
      <div class="post__body">
        {{ post.content }}
      </div>

      {% if downloads %}
        {% include 'sections/section-downloads.html.twig' with {
          'title': downloads.title,
          'descr': downloads.desc,
          'items': downloads.items
        } %}
      {% endif %}

    </section>
  </article>


{% endblock %}
