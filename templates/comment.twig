<li class="comment {{comment.comment_type}}" id="blog-comment-{{comment.ID}}">

	<div class="comment-body">
    <div class="comment-author vcard">
      <cite class="fn">{{comment.author.name}}</cite>
      <span class="says">{{ __('Says:', 'gctheme') }}</span>
    </div>
    <div class="comment-content">
      {{comment.comment_content|wpautop}}
    </div>

		<!-- comment form -->
		{% include "comment-form.twig" %}

		<!-- child comments -->
		{% if post.comments %}
			<h4> replies </h4>
			<div class="comments">
				{% for cmt in comment.children %}
					{% include "comment.twig" with {comment:cmt} %}
				{% endfor %}
			</div>
		{% endif %}

	</div>
</li>
