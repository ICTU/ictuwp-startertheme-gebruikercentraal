{% if tip_nummer %}
{% else %}
  {% set tip_nummer = nr %}
{% endif %}

{% set headerlevelcard = 'h2' %}

{% if headerlevel %}
  {% set headerlevelcard = headerlevel %}
{% endif %}


<div class="tipkaart tipkaart--{{ category|lower }}">
  <a class="tipkaart__link" href="{{ url }}" aria-label="{{ tip_nummer }} {{ title }} (thema is {{ category }}) {{ toptiptekst }}">
    {% if toptip %}
      <span class="tipkaart__toptip">{{ toptiptekst }}</span>
    {% endif %}
    <span class="tipkaart__nummer">{{ tip_nummer }}</span>
    <{{ headerlevelcard }} class="tipkaart__title">{{ title }}</{{ headerlevelcard }}>

    <div class="tipkaart__categorie">
      <svg class="icon icon--medium icon--tipkaart" focusable="false">
        <use xmlns:xlink="http://www.w3.org/1999/xlink"
             xlink:href="{{ sprite_od }}#{{ category|lower }}"></use>
      </svg>
      <span class="name">{{ category }}</span>
    </div>
  </a>
</div>
