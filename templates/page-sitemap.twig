{% extends "base.twig" %}

{% block content %}
  <div class="content-wrapper">
    <article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
      <section class="article-content">
        <h1 class="article-h1">{{ post.title }}</h1>
        <div class="article-body">
          {{ post.content }}
        </div>
      </section>

      {% if sitemap.pages %}
        <section class="section">
          <h2>{{ pagetitle }}</h2>
          <ul>
            {{ sitemap.pages }}
          </ul>
        </section>
      {% endif %}

      {% if sitemap.posts %}
        <section class="section">
          <h2>{{ posttitle }}</h2>
          <ul>
            {{ sitemap.posts }}
          </ul>
        </section>
      {% endif %}

      {% if sitemap.tipthema %}
        <section class="section">
          <h2>{{ tipthemastitle }}</h2>
          <ul>
            {% for item in sitemap.tipthema %}
              <li><a href="{{ item.link }}">{{ item.name }}</a></li>
            {% endfor %}
          </ul>
        </section>
      {% endif %}

      {% if sitemap.speelsets %}
        <section class="section">
          <h2>{{ tipspeelsettitle }}</h2>
          <ul>
            {% for item in sitemap.speelsets %}
              <li><a href="{{ item.link }}">{{ item.name }}</a></li>
            {% endfor %}
          </ul>
        </section>
      {% endif %}

      {% if sitemap.tipgevers %}
        <section class="section">
          <h2>{{ tipgeverstitle }}</h2>
          <ul>
            {% for item in sitemap.tipgevers %}
              <li><a href="{{ item.link }}">{{ item.name }}</a></li>
            {% endfor %}
          </ul>
        </section>
      {% endif %}

    </article>
  </div><!-- /content-wrapper -->
{% endblock %}
