<section class="author author--box l-with-image" itemprop="author" itemscope="itemscope" itemtype="http://schema.org/Person">

  <figure class="author__picture">
    <img src="{{ post.author.meta('auteursfoto_url')|resize(300,300) }}" alt="Profielfoto">
  </figure>

  <div class="author__content">

    <h2 class="author_title">
      <a class="arrow-link" >
        <span class="arrow-link__text"><span class="visually-hidden">Over</span>{{ post.author.name }}</span>
      </a>
    </h2>

    <span class="meta-data__item">functie?</span>

    <hr>

    <p>{{ post.author.meta('functiebeschrijving') }}</p>

    <div class="author__contact-info">
      <a class="link link--contact link--phone" href="tel:{{ post.author.meta('publiek_mailadres') }}">{{ post.author.meta('publiek_mailadres') }}</a>
      <a class="link link--contact link--email" href="mailto:{{ post.author.meta('publiek_mailadres') }}">{{ post.author.meta('publiek_mailadres') }}</a>

      <ul class="social-links">

        <li class="social-links__item">
          <a href="http://www.linkedin.com" class="link--social linkedin" title="LinkedIn-profiel van Gebruiker Centraal">
            LinkedIn-profiel van Gebruiker Centraal</a></li>
        <li class="social-links__item">
          <a href="http://www.twitter.com" class="link--social twitter" title="Twitter van Gebruiker Centraal">
            Twitter van Gebruiker Centraal</a></li>
        <li class="social-links__item">
          <a href="http://www.facebook.com" class="link--social facebook" title="Facebook van Gebruiker Centraal">
            Facebook van Gebruiker Centraal</a></li>
      </ul>    </div>
  </div>
</section>
