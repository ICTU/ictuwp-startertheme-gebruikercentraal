<section class="section section--links">

  {% if title or section_descr %}
    <div class="l-section-top">
      {% if title %}
        <h2 class="section__title">
          Interessante links
        </h2>
      {% endif %}

      {% if section_descr %}
        <p class="section__description">
          Deze sectie kan gebruikt worden voor (externe) links en bronvermeldingen.
        </p>
      {% endif %}
    </div>
  {% endif %}

  <div class="l-section-content">
    <ul class="item-list">
      {% for item in items %}
        <li class="item-list__item">
          <a href="{{ url ? url : '#' }}" class="link link--linklist">{{ item.title }}</a>

          {% if item.descr %}
            <p class="item-list__description">{{ item.descr }}</p>
          {% endif %}
        </li>
      {% endfor %}
    </ul>

  </div>
</section>

