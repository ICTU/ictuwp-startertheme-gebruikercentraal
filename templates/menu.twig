
{% if menu %}
	<nav class="nav-primary" aria-label="{{ menu }}">
		<div tabindex="-1" id="mainnav">
			<ul class="menu genesis-nav-menu menu-primary">
				{% for item in items %}
					<li class="{{ item.classes | join(' ') }}">
						<a target="{{ item.target }}" href="{{ item.link }}"><span>{{ item.title }}</span></a>

						{% if item.children %}
							<ul class="sub-menu">
								{% for child in item.children %}
									<li class="nav-drop-item">
										<a href="{{ child.link }}">{{ child.title }}</a>
									</li>
								{% endfor %}
							</ul>
						{% endif %}

					</li>
				{% endfor %}
			</ul>
		</div>
	</nav><!-- #nav -->
{% endif %}
