{% extends "base.twig" %}

{% block content %}

  {% if post.get_comment_count( ) > 0 or post.comment_status != "closed" %}
    {% set has_comments = 'TRUE' %}
  {% endif %}


  <article
      class="post post--full post--type-{{ post.post_type }} {{ is_gutenberg == 'TRUE' ? 'post--gutenberg' : 'post--plain' }}{{ has_comments ? ' ' ~ 'l-has-comments' }}"
      id="post-{{ post.ID }}">
    <header class="post__header">

      {% if type == 'event' %}

        {% include 'components/date-badge.html.twig' with {
          'start_date': start_date,
          'end_date': end_date,
        } %}

      {% elseif post_date %}
        {% include 'components/date-badge.html.twig' with {
          'post_date': post_date,
          'modifier': '',
        } %}
      {% endif %}

      <h1 class="post__title">
        {{ post.title }}
      </h1>

      {% block metadata %}

      {% endblock %}
    </header>

    {% if not is_gutenberg %}
    <div class="post__body">
      {% else %}
      <div class="post__sections">
        {% endif %}

        {{ post.content }}
      </div>

      {% block author %}
        {% if post.author is not empty %}
          {% include 'sections/section-authorbox.html.twig' %}
        {% endif %}
      {% endblock %}

      {% if related %}
        {% include 'sections/section-related.html.twig' with {
          'title': related.title,
          'descr': related.desc,
          'items': related.items
        } %}
      {% endif %}

      {% if downloads %}
        {% include 'sections/section-downloads.html.twig' with {
          'title': downloads.title,
          'descr': downloads.desc,
          'items': downloads.items
        } %}
      {% endif %}

      {% if links %}
        {% include 'sections/section-links.html.twig' with {
          'section_title': links.title,
          'section_descr': links.desc,
          'items': links.items
        } %}
      {% endif %}
    </div>


  </article>
  <!-- comment box -->

  <!-- comments -->

  {% if post.get_comment_count( ) > 0 or post.comment_status != "closed" %}
    <div id="comments" class="comments-area">
      {% if post.get_comment_count( ) > 0 %}
        <h3 class="comments-title">{{ _n('One comment', '%d comments', n)|format(post.get_comment_count( )) }} </h3>
        <ul class="comment-list">
          {% for cmt in post.comments %}
            {% include "comment.twig" with {comment:cmt} %}
          {% endfor %}
        </ul>
      {% endif %}
      {% if post.comment_status != "closed" %}
        <!-- comment form -->
        {% include "comment-form.twig" %}
      {% endif %}
    </div>
  {% endif %}



  <!-- /content-wrapper -->
{% endblock %}
