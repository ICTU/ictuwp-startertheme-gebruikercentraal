{# template for an icon #}

{% set classList = [
  'icon',
  size ? 'icon--' ~ size : 'icon--small',
  modifier ? 'icon--' ~ modifier
] %}

<svg class="{{ classList|join(' ')|trim(' ', 'right') }}" focusable="false" alt="{{ alt ? alt : 'Icoon' }}">
  <use xmlns:xlink="http://www.w3.org/1999/xlink"
       xlink:href="{{ sprite_url ? sprite_url : sprite }}#{{ icon }}"></use>
</svg>