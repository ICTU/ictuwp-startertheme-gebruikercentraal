{% extends "base.twig" %}

{% block content %}

  {% if title_404 %}
    <header class="page__header">
      <h1 class="page__title">{{ title_404 }}</h1>
    </header>
  {% endif %}

  {% if content_404 or widgets_404 %}
    <div class="page__content">
      {% if content_404 %}
        <div class="form form--search-404">
          <p>{{ content_404 }}</p>

          {{ content_404_search }}

        </div>
      {% endif %}

      {% if widgets_404 %}
        <div class="page__widgets">
          {{ widgets_404 }}
        </div>
      {% endif %}
    </div>
  {% endif %}

{% endblock %}
